<?xml version="1.0" ?>
<sdf version="1.6">
  <world name="world">
    <!-- Include Gazebo's default ground plane -->
    <include>
      <uri>model://ground_plane</uri>
    </include>

    <!-- Include the sun for lighting -->
    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Add a simple line model on the ground -->
    <model name="line">
      <static>true</static>
      <!-- Place the line at y=0, slightly above the ground (z=0.01) -->
      <pose>0 0 0.01 0 0 0</pose>
      <link name="line_link">
        <collision name="collision">
          <geometry>
            <!-- A long, narrow box: adjust size as needed -->
            <box>
              <size>10 0.2 0.01</size>
            </box>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <box>
              <size>10 0.2 0.01</size>
            </box>
          </geometry>
          <material>
            <!-- Black color for a dark line -->
            <ambient>0 0 0 1</ambient>
            <diffuse>0 0 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>
  </world>
</sdf>
